# Database Configuration
DATABASE_URL="postgres://username:password@localhost:5432/database_name"

# Gemini AI API Key
GEMINI_API_KEY="your_gemini_api_key_here"

# eSewa Payment Gateway Configuration
# For sandbox/testing: EPAYTEST
# For production: Your actual merchant code from eSewa
ESEWA_MERCHANT_CODE=EPAYTEST
ESEWA_SECRET_KEY=your_esewa_secret_key_here

# Environment: 'development' or 'production'
# This determines which eSewa endpoint to use
ESEWA_ENV=development

# PayPal Payment Gateway Configuration
# For sandbox/testing: Use your PayPal sandbox app credentials
# For production: Use your live PayPal app credentials
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_ENV=sandbox

# Application Base URL
# Development: http://localhost:3000/infosys
# Production: https://yourdomain.com/infosys
APP_BASE_URL=http://localhost:3000/infosys
